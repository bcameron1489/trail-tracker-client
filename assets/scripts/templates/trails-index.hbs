{{#each trails as |trail|}}
<ul class="trail-forms" data-id="{{trail.id}}">
  <div>Id: {{trail.id}}</div>
  <div>Name: {{trail.name}}</div>
  <div>Difficulty: {{trail.difficulty}}</div>
  <div>Rating: {{trail.rating}}</div>
  </ul>

  <div class="post-trail">
     <form class="create-tracker">
       <fieldset>
       <input class="post-button" type ="submit" name="submit" data-id="{{trail.id}}" value="Add Trail"></input>
       <input class="id-value" name="tracker[trail_id]" value="{{trail.id}}" type="hidden"></input>
       </fieldset>
     </form>
   </div>
{{/each}}
